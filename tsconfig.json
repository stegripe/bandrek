{
    "compilerOptions": {
        "strictNullChecks": true,
        "jsx": "preserve",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "incremental": true,
        "allowJs": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
        "plugins": [{
            "name": "next"
        }]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
